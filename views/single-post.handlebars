{{!-- display form --}}
<ol class="post-list">
    <div class="body-img" action="#" style="margin-top: 6rem">
        <div class="body-sections-img">
            <img id="pic-4" src="/api/posts/images/{{post_data.file_src}}" alt="male black,blue and white Nikes" />
        </div>

        <div class="img-info-description">
            <p class="img-info-text">
                <span style="font-weight: bold; font-size: 20px">{{post_data.user.username}}</span><br></br>
                <span style="font-weight: bold">{{post_data.post_title}}</span> {{post_data.post_description}}<br></br>
                <span style="font-weight: bold">Amount: {{post_data.price}}</span>
            </p>
        </div>
        <div class="new-comment">
            <div>
                <label for="comment">Comment on this post</label>
                <textarea name="comment" id="comment"></textarea>
            </div>
            <div>
                <button type="button" onclick="('going to comment page')" id="btn-one">comment</button>
            </div>
        </div>
    </div>
    {{#each post_data.comments as |post| }}
    <li>
        {{> comments post }}
    </li>
    {{/each}}
</ol>