      <div class="mutual-convo">
        <div class="row">
          <p>
            {{ post.comments.comment_text }}
          </p>
        </div>
        </form>
      </div>
      <form action="#" id="textarea">
        <textarea name="comments" placeholder="Write a comment" id="comments"
          style="font-family: sans-serif; font-size: 1em"></textarea>
      </form>
      <button id="button-comment" onclick="('going to comment page')">
        Add comment
      </button>
    </div>
  </div>
</section>

