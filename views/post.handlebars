<div id="post-img">
    <div style="margin-top: 4rem;">
        <h1>Create Post</h1>
    </div>
    
    <div style="post-container">
        <form id="new-post-form" method="POST" action="/api/posts" enctype="multipart/form-data">
        
        <input type="file" name="image" accept="image/*" />

        <input type="text" name="post_title" id="post_title">
        <label for="post_title"><strong>Title</strong> </label>

        <input type="text" name="post_description" id="post_description">
        <label for="post_description"><strong>Description</strong></label>

        <input type="text" name="price" id="price">
        <label for="price"><strong>Asking Price</strong></label>
        <br> <br>
        <input type="submit" for="image"  value="Create post!" /> 
        </form>
    </div>
    
</div>

<script src="./javascript/new-post.js"></script>